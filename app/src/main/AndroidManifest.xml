<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Allows the app to access the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Allows the app to check network connectivity state -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".GithubReposApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/github_octocat_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/github_octocat_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodeAtlas.Launcher"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CodeAtlas.Launcher">

            <!-- Specifies that this activity is the launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>